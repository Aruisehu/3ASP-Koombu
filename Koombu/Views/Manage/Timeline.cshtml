@model IEnumerable<Koombu.Models.Post>

@{
    ViewData["Title"] = "Timeline";
}

<h4>Timeline</h4>
<hr />
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p>@Html.DisplayFor(modelItem => item.Content)</p>

                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id" class="card-link">Voir tout</a>
                </div>
                <div class="panel-footer"><small>Group: @Html.DisplayFor(modelItem => item.Group.Name)</small></div>
            </div>
        </div>
    }
</div>