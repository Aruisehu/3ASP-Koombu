@model IEnumerable<Koombu.Models.Post>

@{
    ViewData["Title"] = "Timeline";
    ViewData.AddActivePage(ManageNavPages.Timeline);
}

<h4>Timeline</h4>
<hr />
<div class="row">
    <div class="col-sm-12">
        <p>All the posts from the groups you are a part of and from your followings will appear here.</p>
    </div>
    @foreach (var item in Model)
    {

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p>@Html.DisplayFor(modelItem => item.Content)</p>

                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id" class="card-link">Voir tout</a>
                </div>
            </div>
        </div>
    }
</div>